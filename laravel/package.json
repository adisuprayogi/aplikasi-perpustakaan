{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "dev:css": "cross-env NODE_ENV=development tailwindcss -i ./resources/css/main.css -o public/dist/css/main.css --watch",
        "dev:js": "cross-env NODE_ENV=development esbuild ./resources/js/main.js --bundle --outfile=./public/dist/js/main.js --watch",
        "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:css\" \"npm run dev:js\"",
        "build:css": "cross-env NODE_ENV=development tailwindcss -i ./resources/css/main.css -o public/dist/css/main.css --minify",
        "build:js": "cross-env NODE_ENV=development esbuild ./resources/js/main.js --bundle --outfile=./public/dist/js/main.js --minify",
        "build": "cross-env NODE_ENV=production concurrently \"npm run build:css\" \"npm run build:js\""
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.14",
        "@tailwindcss/forms": "^0.5.10",
        "alpinejs": "^3.15.0",
        "axios": "^1.11.0",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "esbuild": "^0.25.10"
    }
}
